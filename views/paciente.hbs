<h1>CENTRO MEDICO EL ROSARIO</h1>
<h2>LISTADO DE PACIENTES</h2>
<table>
    <thead>
        <tr>
            <th>Nombre del paciente</th>
             <th>Cédula del paciente </th>
            <th>Edad </th>
            <th>Teléfono </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each paciente}}
        <tr>
            <form action="/paciente/actualizar/{{cedula}}" method="post">
                <td><input id="paciente" name="paciente" value="{{nombre}}" {{../opcion}}></td>
                <td><input id="cedula" value="{{cedula}}" disabled></td>
                <td><input id="edad" name="edad" value="{{edad}}" {{../opcion}}></td>
                <td><input id="telefono" name="telefono" value="{{telefono}}" {{../opcion}}></td>
                <td>
                {{#if ../estado}}
                    <a class="eliminar" href="/paciente/eliminar/{{cedula}}"><img src="/imagenes/eliminar.png"></a>
                    <a class="editar" href="/paciente/activar"><img src="/imagenes/editar.png"></a>
                {{else}}
                    <input type="submit" value="Enviar">
                {{/if}}
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>
<div class="opciones-tabla">
<a class="volver" href="/">Volver</a>
<a href="/paciente/agregar-paciente">Agregar paciente</a>
</div>